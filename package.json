{
  "name": "hyperons",
  "version": "0.0.1",
  "description": "Renders JSX components to HTML strings without a framework.",
  "main": "dist/cjs.js",
  "module": "dist/esm.js",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "prepare": "npm run build",
    "pretest": "npm run build",
    "spec": "mocha test/spec.js",
    "lint": "prettier --config .prettierrc.json --list-different src/** test/**",
    "test": "npm run lint && npm run spec"
  },
  "keywords": ["html", "hyperscript", "jsx", "renderer", "strings"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-like-robots/hyperons.git"
  },
  "author": "Matt Hinchliffe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-like-robots/hyperons/issues"
  },
  "homepage": "https://github.com/i-like-robots/hyperons",
  "devDependencies": {
    "buble": "^0.19.3",
    "chai": "^4.1.2",
    "chai-html": "^1.1.5",
    "mocha": "^5.0.5",
    "prettier": "^1.11.1",
    "rollup": "^0.57.1",
    "rollup-plugin-buble": "^0.19.2"
  }
}
